<% provide(:title, "Log in") %>

<div class="login-container">
  <div class="flash-message">
    <%= render 'shared/flash' %>
  </div>
  <h1 class="font-weight-light">Log in</h1>
  <div class="signin-form">
    <%= bootstrap_form_with(url: "/login", local: true) do |f| %>
      <%= f.email_field :email %>
      <div class="form-group">
        <label for="password">Password <small><%= link_to "(Forgot password?)", new_password_reset_path %></small></label>
        <%= f.password_field :password, hide_label: true %>
      </div>

      <div class="form-group">
        <%= f.check_box :remember_me %>
        <small id="emailHelp" class="form-text text-muted">New user? <%= link_to "Sign up now", root_path %>.</small>
      </div>
      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
