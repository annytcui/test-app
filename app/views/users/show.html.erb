<% provide(:title, full_name(@user)) %>

<div class="user-container row">
  <aside class="my-profile col-3">
    <%= image_tag "default.png" %>
    <h6 class="font-weight-heavy"><%= full_name(@user) %></h6>

  </aside>

  <div class="my-content col-8">

    <ul class="nav user-nav">
      <li class="nav-item">
        <a class="nav-link" href="#">Profile</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Timeline</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Blogs</a>
      </li>
    </ul>

    <div class="user-forms">

      <div class="update-form">
        <%= form_for(@user, url: user_path(@user), method: :patch, html: { class: 'profile-form' }) do |f| %>

          <div class="form-group">
            <%= f.label :firstname, "First name" %>
            <%= f.text_field :firstname, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :lastname, "Last name" %>
            <%= f.text_field :lastname, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :gender_cd, "Gender" %>
            <%= f.select :gender, User.genders.keys %>
          </div>
          <div class="form-group">
            <%= f.label :birthday %>
            <%= f.date_select :birthday %>
          </div>
          <%= f.submit "Save", class: "btn btn-primary" %>
        <% end %>
      </div>

    </div>
  </div>

</div>
