<div class="signup-form">
  <%= form_for(@user) do |f| %>
      <div class="form-group form-row">
        <div class="col">
          <%= f.text_field :firstname, class: 'form-control col', placeholder: 'First name' %>
        </div>
        <div class="col">
          <%= f.text_field :lastname, class: 'form-control col', placeholder: 'Last name' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.email_field :email, class: 'form-control', placeholder: 'Enter email' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, class: 'form-control', placeholder: 'Enter password' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Enter password again' %>
      </div>

      <%= f.submit "Sign me up", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
