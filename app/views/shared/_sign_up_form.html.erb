<div class="signup-form">
  <%= form_for(@user, html: { class: "needs-validation", novalidate: "true" }) do |f| %>
      <div class="form-group form-row">
        <div class="col">
          <%= f.text_field :firstname, class: 'form-control col', id: "validationCustom01", required: true, placeholder: 'First name' %>
          <div class="invalid-feedback">
            Invalid field.
          </div>
        </div>
        <div class="col">
          <%= f.text_field :lastname, class: 'form-control col', id: "validationCustom02", required: true, placeholder: 'Last name' %>
          <div class="invalid-feedback">
            Invalid field.
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.email_field :email, class: 'form-control', id: "validationCustom03", required: true, pattern: '/\A[\w+\-.]+@[a-z\d\-]+(\.[a-z\d\-]+)*\.[a-z]+\z/i', placeholder: 'Enter email' %>
        <div class="invalid-feedback">
          Invalid field.
        </div>
      </div>

      <div class="form-group">
        <%= f.password_field :password, class: 'form-control', id: "validationCustom04", required: true, placeholder: 'Enter password' %>
        <div class="invalid-feedback">
          Invalid field.
        </div>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, class: 'form-control', id: "validationCustom05", required: true, placeholder: 'Enter password again' %>
        <div class="invalid-feedback">
          Invalid field.
        </div>
      </div>

      <%= f.submit "Sign me up", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<script>
// Disable form submissions if there are invalid fields
(function() {
  'use strict';
  window.addEventListener('load', function() {
    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    var forms = document.getElementsByClassName('needs-validation');
    // Loop over them and prevent submission
    var validation = Array.prototype.filter.call(forms, function(form) {
      form.addEventListener('submit', function(event) {
        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  }, false);
})();
</script>
