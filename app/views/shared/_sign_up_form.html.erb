<div class="signup-form">
  <%= bootstrap_form_with(model: @user, local: true, url: signup_path) do |f| %>
    <div class="form-row">
      <div class="col">
        <%= f.text_field :firstname, hide_label: true, placeholder: 'First name' %>
      </div>
      <div class="col">
        <%= f.text_field :lastname, hide_label: true, placeholder: 'Last name' %>
      </div>
    </div>
    <%= f.email_field :email, hide_label: true, placeholder: 'Email' %>
    <%= f.password_field :password, hide_label: true, placeholder: 'Password', help: "Must include both letters and numbers (>= 8 characters)" %>
    <%= f.password_field :password_confirmation, hide_label: true, placeholder: 'Confirm password' %>
    <%= f.submit "Sign me up", class: "btn btn-primary" %>
  <% end %>
</div>
