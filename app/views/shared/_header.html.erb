<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <span class="navbar-brand">PandaVisas</span>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">

        <% if logged_in? %>
          <a class="nav-link" href="<%= user_path(current_user) %>">MySpace <span class="sr-only">(current)</span></a>
        <% else %>
          <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
        <% end %>

        </li>
        <li class="nav-item">
          <a class="nav-link" href="/blogs">Blogs</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/forum">Forum</a>
        </li>
      </ul>

      <% if logged_in? %>
        <%= form_for(:session, url: "/logout", html: { method: :delete, class: "form-inline my-2 my-lg-0"}) do |f| %>
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Log out</button>
        <% end %>
      <% else %>
        <%= form_for(:session, url: "/login", html: { method: :get, class: "form-inline my-2 my-lg-0"}) do |f| %>
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Log in</button>
        <% end %>
      <% end %>

    </div>
  </nav>
</header>
