<% provide(:title, 'Reset password') %>

<div class="reset-container">
  <h1 class="font-weight-light">Reset my password</h1>
  <div class="reset-form">
    <%= bootstrap_form_with(model: @user, url: password_reset_path(params[:id]), local: true) do |f| %>
      <%= hidden_field_tag :email, @user.email %>
      <%= f.password_field :password, label: "New password" %>
      <%= f.password_field :password_confirmation, label: "Confirm new password" %>
      <%= f.submit "Update password", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
